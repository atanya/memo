@model SuperMemo.Models.LoginInfoModel

@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_NonLoggedLayout.cshtml";
}

@if (Model != null && Model.ErrorMessage != null)
{
    <p>
        <span>@Model.ErrorMessage</span>
    </p>
}

@using (Html.BeginForm(new { ReturnUrl = ViewBag.ReturnUrl }))
{
    <p><span>Имя:</span></p>
    <p>
        @Html.TextBoxFor(m => m.UserName)
        @Html.ValidationMessageFor(m => m.UserName)
    </p>
    <p><span>Пароль:</span></p>
    <p>
        @Html.TextBoxFor(m => m.Password, new {type = "password"})
        @Html.ValidationMessageFor(m => m.Password)
    </p>
    <p>
        <button type="submit">Войти</button>
        <a href="@Url.Action("Register", "Authorization")">Зарегаться</a>
    </p>
}